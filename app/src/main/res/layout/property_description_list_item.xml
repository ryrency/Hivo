<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
        android:background="@android:color/white"/>
    <TextView
        android:id="@+id/property_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$7,75,000"
        android:textSize="22dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="4dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/divider1"
        app:layout_constraintStart_toStartOf="@id/divider1" />

    <TextView
        android:id="@+id/property_address_line1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2781 Mauricia Ave"
        android:textSize="18dp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/property_address_line2_tv"
        app:layout_constraintStart_toStartOf="@id/property_price_tv" />

    <TextView
        android:id="@+id/property_address_line2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Santa Clara, 95051"
        android:textSize="16dp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/divider1"
        app:layout_constraintStart_toStartOf="@id/property_price_tv" />

    <TextView
        android:id="@+id/property_bed_no_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="22dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/property_price_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="92dp"
        android:layout_marginEnd="92dp"/>

    <TextView
        android:id="@+id/property_beds_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight ="78dp"
        android:layout_marginEnd="78dp"
        android:textSize="18dp"
        android:text="Beds"
        android:textColor="@color/grey"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/property_bed_no_tv"/>

    <TextView
        android:id="@+id/property_bath_no_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="22dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@id/property_bed_no_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/property_baths_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="18dp"
        android:text="Baths"
        android:textColor="@color/grey"
        android:textStyle="bold"
        android:layout_marginRight="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/property_bath_no_tv"/>
    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="75dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        android:padding="8dp"
        android:background="@android:color/holo_red_dark"/>

    <TextView
        android:id="@+id/sq_ft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Area"
        android:textSize="22dp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/divider2"
        app:layout_constraintStart_toStartOf="@id/divider2"
        app:layout_constraintEnd_toEndOf="@id/divider2"/>


    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        android:padding="8dp"
        android:background="@android:color/holo_green_dark"/>
    <TextView
        android:id="@+id/lot_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lot Size"
        android:textSize="22dp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/divider3"
        app:layout_constraintStart_toStartOf="@id/divider3"
        app:layout_constraintEnd_toEndOf="@id/divider3"/>


    <View
        android:id="@+id/divider4"
        android:layout_width="0dp"
        android:layout_height="75dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        android:padding="8dp"
        android:background="@android:color/holo_green_dark"/>
    <TextView
        android:id="@+id/property_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Property Type"
        android:textSize="22dp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/divider4"
        app:layout_constraintStart_toStartOf="@id/divider4"
        app:layout_constraintEnd_toEndOf="@id/divider4"/>

    <View
        android:id="@+id/divider5"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider3"
        android:padding="8dp"
        android:background="@android:color/holo_red_dark"/>
    <TextView
        android:id="@+id/built_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Built Year"
        android:textSize="22dp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/divider5"
        app:layout_constraintStart_toStartOf="@id/divider5"
        app:layout_constraintEnd_toEndOf="@id/divider5"/>
    <View
        android:id="@+id/divider6"
        android:layout_width="0dp"
        android:layout_height="75dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider4"
        android:padding="8dp"

        android:background="@android:color/holo_red_dark"/>
    <TextView
        android:id="@+id/on_hivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On Hivo"
        android:textSize="22dp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/divider6"
        app:layout_constraintStart_toStartOf="@id/divider6"
        app:layout_constraintEnd_toEndOf="@id/divider6"/>

    <View
        android:id="@+id/divider7"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider5"
        android:padding="8dp"
        android:background="@android:color/holo_green_dark"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="22dp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/divider7"
        app:layout_constraintStart_toStartOf="@id/divider7"
        app:layout_constraintEnd_toEndOf="@id/divider7"/>


    <View
        android:id="@+id/divider8"
        android:layout_width="0dp"
        android:layout_height="75dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider6"
        android:padding="8dp"

        android:background="@android:color/holo_green_dark"/>

    <TextView
        android:id="@+id/price_sq_ft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price/Sq. ft"
        android:textSize="22dp"
        android:textColor="@color/grey"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/divider8"
        app:layout_constraintStart_toStartOf="@id/divider8"
        app:layout_constraintEnd_toEndOf="@id/divider8"/>

    <View
        android:id="@+id/divider9"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider7"
        android:padding="8dp"
        android:background="@android:color/holo_red_dark"/>
    <View
        android:id="@+id/divider10"
        android:layout_width="0dp"
        android:layout_height="75dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider8"
        android:padding="8dp"

        android:background="@android:color/holo_red_dark"/>

    <View
        android:id="@+id/divider11"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider9"
        android:padding="8dp"
        android:background="@android:color/holo_green_dark"/>





</android.support.constraint.ConstraintLayout>