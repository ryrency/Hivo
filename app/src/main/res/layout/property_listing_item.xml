<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/property_iv"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:src="@drawable/house1"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-26dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/property_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:text="$2,309,000"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/property_address_line1_tv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/property_address_line1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="2781 Mauricia Ave"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/property_address_line2_tv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/property_address_line2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:text="Santa Clara, 95051"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/property_iv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/property_bed_no_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/property_price_tv"
        app:layout_constraintStart_toEndOf="@id/property_address_line1_tv"
        android:layout_marginLeft="82dp" />

    <TextView
        android:id="@+id/property_beds_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="75dp"
        android:textSize="18dp"
        android:text="Beds"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/property_address_line1_tv"
        app:layout_constraintTop_toBottomOf="@+id/property_bed_no_tv"/>

    <TextView
        android:id="@+id/property_bath_no_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="34dp"
        android:text="3"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/property_bed_no_tv"
        app:layout_constraintStart_toEndOf="@+id/property_bed_no_tv"/>

    <TextView
        android:id="@+id/property_baths_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="18dp"
        android:text="Baths"
        android:textColor="@color/white"
        android:layout_marginLeft="28dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/property_bed_no_tv"
        app:layout_constraintTop_toBottomOf="@+id/property_bath_no_tv" />

    <TextView
        android:id="@+id/property_sqft_no_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1900"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="27dp"
        app:layout_constraintStart_toEndOf="@id/property_bath_no_tv"
        app:layout_constraintTop_toTopOf="@id/property_bed_no_tv"/>

    <TextView
        android:id="@+id/property_sqft_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:text="Sq.Ft"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/property_baths_tv"
        app:layout_constraintTop_toBottomOf="@+id/property_sqft_no_tv" />

</android.support.constraint.ConstraintLayout>
